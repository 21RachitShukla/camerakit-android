<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CameraKitView">

        <attr name="android:adjustViewBounds" />

        <attr name="camera_aspectRatio" format="float|string" />

        <attr name="camera_facing" format="enum">
            <enum name="back" value="0" />
            <enum name="front" value="1" />
        </attr>

        <attr name="camera_flash" format="boolean">
            <enum name="off" value="0" />
            <enum name="on" value="1" />
            <enum name="auto" value="2" />
            <enum name="torch" value="3" />
        </attr>

    </declare-styleable>

    <declare-styleable name="CameraPreview">

        <attr name="camera_backend" format="enum">
            <enum name="auto" value="0" />
            <enum name="camera1" value="1" />
            <enum name="camera2" value="2" />
        </attr>

        <attr name="preview_backend" format="enum">
            <enum name="auto" value="0" />
            <enum name="cpu" value="1" />
            <enum name="gpu" value="2" />
        </attr>

        <attr name="preview_frontend" format="enum">
            <enum name="auto" value="0" />
            <enum name="textureView" value="1" />
            <enum name="surfaceView" value="2" />
            <enum name="glSurfaceView" value="3" />
        </attr>

    </declare-styleable>

</resources>